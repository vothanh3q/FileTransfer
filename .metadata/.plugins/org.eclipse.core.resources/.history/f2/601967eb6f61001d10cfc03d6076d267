<?xml version="1.0" encoding="UTF-8"?>
<api context="/uploadFile" name="uploadFile" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/add">
        <inSequence>
            <property expression="json-eval($.filePath)" name="filePath" scope="default" type="STRING"/>
            <file.read configKey="upload">
                <path>{$ctx:filePath}</path>
                <readMode>Complete File</readMode>
                <startLineNum>0</startLineNum>
                <endLineNum>0</endLineNum>
                <lineNum>0</lineNum>
                <contentType>text/plain</contentType>
                <includeResultTo>Message Body</includeResultTo>
                <enableStreaming>false</enableStreaming>
                <enableLock>false</enableLock>
            </file.read>
            <datamapper config="gov:datamapper/convertToJson.dmc" inputSchema="gov:datamapper/convertToJson_inputSchema.json" inputType="CSV" outputSchema="gov:datamapper/convertToJson_outputSchema.json" outputType="JSON" xsltStyleSheet="gov:datamapper/convertToJson_xsltStyleSheet.xml"/>
            <log level="full"/>
            <call>
                <endpoint>
                    <http method="put" uri-template="http://localhost:8888/update?id=1">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <log category="ERROR" level="full"/>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/getCus?customerId={customerId}">
        <inSequence>
            <log level="full">
                <property name="customerId" value="get-property('uri.var.customerId')"/>
            </log>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://localhost:8888/getCustomerById?id={uri.var.customerId}">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log level="full"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <log category="ERROR"/>
        </faultSequence>
    </resource>
    <resource methods="PUT" uri-template="/updateCus?customerId={customerId}">
        <inSequence>
            <log level="full"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <log category="ERROR" level="full"/>
        </faultSequence>
    </resource>
</api>
